<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/mintgreen"
    >

    <TextView
        android:layout_width="390dp"
        android:layout_height="80dp"
        android:text="Haloe?"
        android:layout_marginTop="15dp"
        android:textAlignment="center"


        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="60dp"
        android:textStyle="bold"
        android:background="@drawable/border"
        android:textColor="@color/PINk"
        />
    <ImageView
        android:layout_height="440dp"
        android:layout_width="300dp"
        android:layout_marginLeft="60dp"
        android:id="@+id/image_view"
        android:src="@drawable/aloe"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="15dp"

        android:background="@color/mintgreen"

        />

    <TextView
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:id="@+id/resulttv"
android:layout_marginLeft="40.5dp"

        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="30dp"
        android:background="@drawable/border"
        android:textColor="@color/PINk"
android:paddingTop="3dp"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="07dp"

        android:background="@color/mintgreen"

        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="55dp"
        android:text="choose image"
android:background="@drawable/lasttwoborder"
        android:id="@+id/choose_image_btn"
        android:textColor="@color/white"
        android:backgroundTint="@color/PINk"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginTop="4.5dp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:backgroundTint="@color/PINk"
        android:textStyle="bold"
        android:background="@drawable/lasttwoborder"
        android:text="Take a Snap"
        android:textSize="30dp"
        android:layout_marginLeft="55dp"
        android:id="@+id/btn_snap"
        android:layout_marginTop="12.5dp"
        />


</LinearLayout>